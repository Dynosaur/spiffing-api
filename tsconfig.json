{
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "lib": ["ES2020.String"],
        "moduleResolution": "Node",
        "paths": {
            "app/*": ["src/*"],
            "database/*": ["src/database/*"],
            "interface/*": ["src/server/interface/*"],
            "tests/*": ["tests/*"],
            "server/*": ["src/server/*"],
            "tools/*": ["src/tools/*"],
            "interface-bindings/*": ["src/server/interface-bindings/*"],
            "route-handling/*": ["src/server/route-handling/*"]
        },
        "target": "ES6"
    }
}