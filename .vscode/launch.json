{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "validation tests",
            "request": "launch",
            "runtimeArgs": ["run", "test:valid"],
            "runtimeExecutable": "npm",
            "skipFiles": ["<node_internals>/**"],
            "type": "pwa-node"
        }, {
            "name": "run application",
            "request": "launch",
            "runtimeArgs": ["start"],
            "runtimeExecutable": "npm",
            "skipFiles": ["<node_internals>/**"],
            "type": "pwa-node"
        }, {
            "name": "router unit tests",
            "request": "launch",
            "runtimeArgs": ["run", "test:unit:router"],
            "runtimeExecutable": "npm",
            "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**/*.js"],
            "type": "pwa-node"
        }, {
            "name": "mock unit tests",
            "request": "launch",
            "runtimeArgs": ["run", "test:unit:mock"],
            "runtimeExecutable": "npm",
            "skipFiles": ["<node_internals>/**", "${workspaceFolder}/node_modules/**/*.js"],
            "type": "pwa-node"
        }
    ]
}