{
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "lib": ["ES2020.String"],
        "moduleResolution": "Node",
        "paths": {
            "database/*": ["src/database/*"],
            "interface/*": ["src/server/interface/*"],
            "tests/*": ["tests/*"],
            "server/*": ["src/server/*"],
            "tools/*": ["src/tools/*"],
            "route-handling/*": ["src/server/route-handling/*"],
            "router/*": ["src/server/router/*"],
            "dev/*": ["src/dev/*"]
        },
        "target": "ES6",
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true
    }
}